= form_for @kommit do |f|
  - if @kommit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@kommit.errors.count, "error")} prohibited this kommit from being saved:"
      %ul
        - @kommit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :message
    = f.text_field :message
  .field
    = f.label :revision
    = f.text_field :revision
  .actions
    = f.submit 'Save'
