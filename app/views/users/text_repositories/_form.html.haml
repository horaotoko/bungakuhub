= form_for [current_user,@text_repository] do |f|
  - if @text_repository.errors.any?
    #error_explanation
      %h2= "#{pluralize(@text_repository.errors.count, "error")} prohibited this text_repository from being saved:"
      %ul
        - @text_repository.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.hidden_field :user_id
  .field
    - RepositoryType.all.each do |repo_type|
      = f.radio_button :repository_type_id,repo_type.id
      %span= repo_type.name[current_locale]
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
