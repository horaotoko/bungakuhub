= form_for [current_user, @branch.repository.becomes(Repository), @branch] do |f|
  - if @branch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@branch.errors.count, "error")} prohibited this branch from being saved:"
      %ul
        - @branch.errors.full_messages.each do |msg|
          %li= msg

  = f.hidden_field :repository_id
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
