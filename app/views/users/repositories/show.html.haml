%p
  %b Type:
  = @repository.type
%p
  %b User:
  = @repository.user_id
%p
  %b Repository type:
  = @repository.repository_type_id
%p
  %b Name:
  = @repository.name
%p
  %b Description:
  = @repository.description

- @repository.branches.each_with_index do |branch, i|
  %p= "#{i+1}:#{branch.name}"

= link_to "New Branch", new_user_repository_branch_path(current_user, @repository)
